<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/name_sweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_name_sweet"
        />
    <EditText
        android:id="@+id/dsc_sweet"
        android:layout_marginTop="@dimen/margin_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_description_sweet"
        />
    <Button
        android:id="@+id/add_sweet"
        android:layout_width="match_parent"
        style="@style/MyButton1"
        android:onClick="onClick"
        android:text="@string/add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>